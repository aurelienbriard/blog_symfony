{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<h1>Détail de l'article n° {{ article.id }}</h1>

<div class="card">
  <div class="card-header">
    Id: {{ article.Id }} Title: {{ article.title }}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{ article.content }}</p>
      <footer class="blockquote-footer">Publié le {{ article.createdAt | date('d/m/Y - H:i:s') }}</footer>
      <footer class="blockquote-footer">Mis à jour le {{ article.updatedAt | date('d/m/Y - H:i:s') }}</footer>
    </blockquote>
  </div>
</div>
<a href=" {{ path ('article_index') }} ">Retour à la liste</a><br>
<a href=" {{ path ('article_edit', {'id' : article.id}) }} ">Modifier cet article</a><br>
<a href=" {{ path ('article_delete', {'id' : article.id}) }} ">Supprimer cet article</a>



{% endblock %}
